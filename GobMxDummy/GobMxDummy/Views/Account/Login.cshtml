@model GobMxDummy.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    <h2>Ingresa tus credenciales.</h2>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-8">
                <div>
                    @Html.ValidationSummary(true)
                </div>
                <form class="form-horizontal" role="form">
                    <div class="col-md-12" style="padding-bottom:5px;">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="email-03">@Html.LabelFor(m => m.UserName)</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Correo eléctronico" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" style="padding-bottom:5px;">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="password-03">@Html.LabelFor(m => m.Password)</label>
                            <div class="col-sm-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="pull-right">
                            Si no tienes una cuenta @Html.ActionLink("Registrate", "Register").
                        </p>
                        <div class="col-sm-offset-3 col-sm-9">
                            <button class="btn btn-primary pull-right" type="submit">Enviar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>


    }
</section>
<div class="row">
    <div class="col-md-8">
        <section class="social" id="socialLoginForm">
            <h2>Use another service to log in.</h2>
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        if ($('.validation-summary-errors').html() != undefined) { $('.validation-summary-errors').addClass('alert alert-danger'); }
    </script>
}
