@model GobMxDummy.Models.MailModels

@{
    ViewBag.Title = "Enviar Notificaciones";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>
@using (Html.BeginForm("EnviarNotificacion", "Home"))
    {
    <div class="row">
        <div class="col-md-8" style="padding-bottom:5px;">
            <div class="col-md-12">
                <h3>Enviar Notificación Gob Mx de Correo Electrónico </h3>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="email-03"><label for="UserName">Correo Electronico</label></label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.receiver, new { @class = "form-control", @placeholder = "Correo eléctronico" })
                    @Html.ValidationMessageFor(m => m.receiver)
                </div>
            </div>
        </div>
        <div class="col-md-8" style="padding-bottom:5px;">
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    @Html.ValidationSummary(true)
                    <button class="btn btn-primary pull-right" type="submit">Enviar Correo</button>
                    @Html.ActionLink("GenerateDebugLog", "GenerateDebugLog")
                </div>
            </div>
        </div>
    </div>
}